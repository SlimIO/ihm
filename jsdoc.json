{
    "opts": {
        "encoding": "utf8",
        "destination": "./jsdoc/",
        "recurse": true,
        "template": "node_modules/@escommunity/minami"
    },
    "source": {
        "include": [
            "index.js",
            "./src/bodyParser.js",
            "./src/httpServer.js",
            "./public/js/master.js",
            "./public/components/searchbar.js",
            "./public/components/widget.js",
            "./public/js/utils.js",
            "./public/lib/chart.js"
        ],
        "exclude": [
            "node_modules",
            "client"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    }
}
